<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.aliitani.guessthenumber.MainActivity"
    android:background="#fef2af"
    android:visibility="visible">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Guess a number between 1 to 1000, and I will guess it!"
        android:id="@+id/TitleScreen"
        android:textSize="35dp"
        android:textAlignment="center"
        android:padding="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start"
        android:id="@+id/startGame"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="35sp"
        android:padding="35dp"
        android:visibility="visible"
        android:onClick="startButton"
        android:layout_marginTop="25dp" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Lower"
        android:id="@+id/downButton"
        android:layout_gravity="center_horizontal"
        android:padding="50dp"
        android:background="#f48282"
        android:onClick="checkNumber"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:visibility="gone" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Correct"
        android:id="@+id/CorrectButton"
        android:paddingTop="50dp"
        android:paddingBottom="50dp"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:background="#7ed36d"
        android:onClick="checkNumber"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="150sp"
        android:layout_height="wrap_content"
        android:text="Higher"
        android:id="@+id/upButton"
        android:layout_gravity="center_horizontal"
        android:background="#6bc6ff"
        android:onClick="checkNumber"
        android:padding="50dp"
        android:layout_alignTop="@+id/downButton"
        android:layout_alignEnd="@+id/TitleScreen"
        android:visibility="gone" />

</RelativeLayout>
